<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:elevation="0dip"
    card_view:cardCornerRadius="@dimen/text_4dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/text_8dip"
        android:paddingStart="@dimen/text_8dip"
        android:paddingRight="@dimen/text_8dip"
        android:paddingEnd="@dimen/text_8dip"
        android:paddingTop="@dimen/activity_horizontal_margin"
        >

        <TextView
            android:id="@+id/restrictions_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/restrictions_text"
            android:singleLine="true"
            />

        <ListView
            android:id="@+id/restrictions_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/restrictions_heading"
            ></ListView>

    </RelativeLayout>

</android.support.v7.widget.CardView>